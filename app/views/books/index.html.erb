<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <div class="link_field">
          <td><%= link_to 'Show', book, class: "show" %></td>
          <td><%= link_to 'Edit', edit_book_path(book), class: "edit" %></td>
          <td><%= link_to 'Destroy', book, class: "destroy", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </div>
      </tr>
    <% end %>
  </tbody>
</table>


<h2>New book</h2>
<%= render 'form', book: @book %>
